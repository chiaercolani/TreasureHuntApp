<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <PreferenceCategory
        android:title="@string/pref_cat_user"
        android:key="pref_cat_user"
        >

        <EditTextPreference
            android:key="pref_username"
            android:title="@string/pref_username_title"
            android:persistent="true"
            android:dialogTitle="@string/pref_username_dialogtitle"
            android:dialogMessage="@string/pref_username_dialogmessage"
            android:defaultValue=""
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_cat_app"
        android:key="pref_cat_app">

        <CheckBoxPreference
            android:key="pref_push_notifications"
            android:title="@string/pref_notification_title"
            android:summary="@string/pref_notification_summary"
            android:defaultValue="true"
            />

    </PreferenceCategory>

</PreferenceScreen>